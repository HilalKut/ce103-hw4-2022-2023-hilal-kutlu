package ce103_hw4_suleyman_mert_almali;

public class MenuDesign {
	 public static void printMenu(String[] options){
	    	System.out.println("-----------------------------------------------------------------------------------------------");
	    	System.out.println("|                 |                  |             |           |          |         |         |");
	        for (String option : options){
	        	
	            System.out.println(option);
	        }
	        System.out.println("|                 |                  |             |           |          |         |         |");
	        System.out.println("-----------------------------------------------------------------------------------------------");
	    	
	        
	        
	        
	    }
	 
	 

}
